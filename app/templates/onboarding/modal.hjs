<div class="nav">
	<button type="button" class="material fab m-icon prev" data-direction="prev">arrow_back</button>
	<button type="button" class="material fab m-icon next" data-direction="next"></button>
</div>

<section class="slide intro active" data-id="1">
	<img class="logo" src="icon/300.png" />

	<h2 class="appname">iChrome</h2>

	<span class="tagline">{{i18n.onboarding.modal.tagline}}</span>

	{{#newTab}}
		<span class="footer note">{{i18n.onboarding.modal.wrong_extension_newtab}} <a href="https://chrome.google.com/webstore/detail/ichrome/oghkljobbhapacbahlneolfclkniiami" target="_blank">{{i18n.onboarding.modal.wrong_extension_action}}</a></span>
	{{/newTab}}
	{{^newTab}}
		<span class="footer note">{{i18n.onboarding.modal.wrong_extension}} <a href="https://chrome.google.com/webstore/detail/ichrome-new-tab/iccjgbbjckehppnpajnmplcccjcgbdep" target="_blank">{{i18n.onboarding.modal.wrong_extension_action}}</a></span>
	{{/newTab}}
</section>

<section class="slide about" data-id="2">
	<div class="hero" style="background-image: url(images/onboarding.png)"></div>

	<div class="caption">
		<h2>{{i18n.onboarding.modal.about}}</h2>

		<p>{{i18n.onboarding.modal.about_desc}}</p>
	</div>

	<span class="footer note">{{{i18n.onboarding.modal.terms}}}</span>
</section>

<section class="slide sign-in" data-id="3">
	<div class="pending visible">
		<div class="caption">
			<h2>{{i18n.onboarding.modal.sign_in}}</h2>

			<p>{{i18n.onboarding.modal.sign_in_desc}}</p>

			<p>{{i18n.onboarding.modal.sign_in_desc2}}</p>
		</div>

		<div class="btn-container">
			<button type="button" class="material large red sign-in">{{i18n.onboarding.modal.sign_in_button}}</button>
		</div>
	</div>

	<div class="complete existing">
		<h2>{{i18n.onboarding.modal.have_account}}</h2>

		<p>{{i18n.onboarding.modal.have_account_desc}}</p>
	</div>

	<div class="complete new">
		<h2>{{i18n.onboarding.modal.get_started}}</h2>

		<p>{{i18n.onboarding.modal.get_started_desc}}</p>
	</div>
</section>

<section class="slide pro final" data-id="4">
	<div class="hero" style="background-image: url(images/onboarding_pro.png)"></div>

	<div class="caption">
		<h2>{{i18n.onboarding.modal.pro_title}}</h2>

		<div class="row">
			<div class="col-xs-12">{{i18n.onboarding.modal.pro_desc1}}</div>
			<div class="col-xs-7">
				<ul>
					<li>{{i18n.onboarding.modal.pro_desc2}}</li>
					<li>{{i18n.onboarding.modal.pro_desc3}}</li>
					<li>{{i18n.onboarding.modal.pro_desc4}}</li>
					<li>{{i18n.onboarding.modal.pro_desc5}}</li>
				</ul>
			</div>
			<div class="col-xs-5">
				<ul>
					<li>{{i18n.onboarding.modal.pro_desc6}}</li>
					<li>{{i18n.onboarding.modal.pro_desc7}}</li>
					<li>{{i18n.onboarding.modal.pro_desc8}}</li>
				</ul>
			</div>
			<div class="col-xs-12">
				{{i18n.onboarding.modal.pro_upgrade}}
			</div>
		</div>

	<span class="footer note">{{{i18n.onboarding.modal.pro_mback}}}</span>
</section>
