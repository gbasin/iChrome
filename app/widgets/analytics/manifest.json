				"showWeek": {
					"title": "This Week vs Last Week",
					"on": "show",
					"off": "hide"
				},

				"topVisited": {
					"title": "Top Visited Pages",
					"on": "show",
					"off": "hide"
				},

				"channels": {
					"title": "Traffic Channels",
					"on": "show",
					"off": "hide"
