		"placeholder": "i18n.settings.title_placeholder",
		"defaultVal": ""
	}, {
		"type": "size"
	}, {
		"type": "select",
		"name": "profile",
		"label": "i18n.settings.profile",
		"options": "getProfiles"
	},{
		"type": "radio",
		"name": "weekweek",
		"label": "i18n.settings.showWeek.title",
