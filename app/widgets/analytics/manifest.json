		"options": {
			"1": "i18n.settings.showWeek.on",
			"0": "i18n.settings.showWeek.off"
		}
	},{
		"type": "radio",
		"name": "yearyear",
		"label": "i18n.settings.showYear.title",
		"nicename": "Yearly",
		"options": {
			"1": "i18n.settings.showYear.on",
			"0": "i18n.settings.showYear.off"
		}
	},{
		"type": "radio",
		"name": "topvisited",
		"label": "i18n.settings.topVisited.title",
		"nicename": "Top Visited Pages",
		"options": {
			"1": "i18n.settings.topVisited.on",
			"0": "i18n.settings.topVisited.off"
		}
	}, {
		"type": "radio",
		"name": "channels",
		"label": "i18n.settings.channels.title",
		"nicename": "Traffic Channels",
		"options": {
			"1": "i18n.settings.channels.on",
			"0": "i18n.settings.channels.off"
		}
	}],

	"strings": {
		"en": {
			"name": "Analytics",
			"desc": "Displays various metrics from a Google Analytics profile.",

			"sessions": "sessions",
			"pageviews": "Pageviews",
			"pagesvisit": "Pages/visit",
			"bouncerate": "Bounce Rate",
			"completions": "Completions",

