<template id="template.store-detail">
    <h3 class="title">{{name}}</h3>

    <div class="desc-container">
        <h4>Installation <span class="legend">Drag and drop any size onto your homepage</span></h4>

        {{#sizes}}
            <section class="handle" data-size="{{0}}">{{1}}</section>
        {{/sizes}}

        <h4>Description</h4>

        <div class="desc">
            {{{desc}}}
        </div>
    </div>

    <div class="preview-container">
        <h4>Preview</h4>

        <div class="preview">
            {{{widget}}}
        </div>
    </div>
</template>
